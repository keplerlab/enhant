{
    "manifest_version": 2,
  
    "name": "Chrome Audio Capture",
    "description": "This extension captures the audio on the current tab and saves the output file on your computer when the capture is complete",
    "version": "1.1.1",
    "icons": {
      "128":"static/images/icon.png"
      },
  
    "browser_action": {
      "default_icon": "static/images/icon.png",
      "default_popup": "popup.html",
      "default_title": "Open Chrome Audio Capture interface"
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "background": {
      "scripts": ["background.js"],
      "persistent": true
    },
    "content_scripts": [
      {
        "matches": ["https://*.com/*", "http://*.com/*"],
        "js": ["ws-audio/libopus.js", "ws-audio/opus.js", "ws-audio/xaudio.js" ,
          "ws-audio/ws-audio-api.js", "socket.js", "capture_audio.js", "main.js"]
      }
    ],
    "permissions": [
      "tabs",
      "tabCapture",
      "downloads",
      "storage"
    ]
  }
  