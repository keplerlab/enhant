{
    "manifest_version": 2,
  
    "name": "Chrome Audio Capture",
    "description": "This extension captures the audio on the current tab and saves the output file on your computer when the capture is complete",
    "version": "1.1.1",
    "icons": {
      "128":"static/images/logo.png"
    },
    "page_action": {
      "default_popup": "popup.html",
      "default_icon": {
         "128":"static/images/logo.png"
      }
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "background": {
      "scripts": ["restrict_url.js", "flac-encoder/setpath.js", 
        "flac-encoder/libflac.js", "jszip/fileSaver.js" ,"jszip/jszip.js" , 
        "jszip/jszip-utils.js", "message_handler_bg.js", "config.js", 
        "encoder.js" ,"socket.js", "background.js"],
      "persistent": true
    },
    "content_scripts": [
      {
        "matches": ["https://*/*", "http://*/*"],
        "js": ["flac-encoder/setpath.js", "flac-encoder/libflac.js", "capture_meeting_id.js",
          "config.js", "encoder.js" ,"socket.js", "backend.js",
          "main.js"],
        "persistent": true
      }
    ],
    "web_accessible_resources": ["ws-audio/libopus.js", "ws-audio/opus.js", "ws-audio/xaudio.js",
      "ws-audio/ws-audio-api.js", "socket.js", "capture_audio.js", "inject.js"],
    "permissions": [
      "declarativeContent",
      "tabs",
      "tabCapture",
      "downloads",
      "storage",
      "activeTab"
    ]
  }
  